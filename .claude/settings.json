{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/project-status.cjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/git-guard.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/secrets-scan.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/pre-commit-gate.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/commit-project-check.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/docs-sync.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/arch-audit.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/pr-size-tracker.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/agent-suggest.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/project-update.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/docs-sync.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/edit-review-suggest.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/efficiency-tracker.js"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/new-file-test-reminder.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/agent-suggest.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/project-update.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/docs-sync.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/edit-review-suggest.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/efficiency-tracker.js"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/efficiency-tracker.js"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/efficiency-tracker.js"
          }
        ]
      }
    ]
  }
}
