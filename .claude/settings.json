{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/project-status.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/new-work-check.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/local-model-delegate.cjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/git-guard.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/secrets-scan.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/quality-gate.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/pre-commit-gate.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/commit-project-check.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/edit-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/docs-sync.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/pr-size-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/agent-suggest.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/efficiency-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/project-update.cjs"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/edit-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/docs-sync.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/new-file-test-reminder.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/agent-suggest.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/efficiency-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/project-update.cjs"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/test-tracker.cjs"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/efficiency-tracker.cjs"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/efficiency-tracker.cjs"
          }
        ]
      }
    ]
  }
}
