{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/project-status.cjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/git-guard.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/secrets-scan.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/quality-gate.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/edit-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/docs-sync.cjs"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/edit-tracker.cjs"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/docs-sync.cjs"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/test-tracker.cjs"
          }
        ]
      }
    ]
  }
}
